<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss} %-5level %logger{0}: %msg [%thread]%n</pattern>
		</encoder>
	</appender>

	<root level="OFF">
		<appender-ref ref="STDOUT" />
	</root>

	<logger name="mmo" level="DEBUG" />

</configuration>